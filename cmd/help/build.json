{
    "command": "build",
    "desc": "Build JavaScript libraries.",
    "usage": [
        "build [<options>]",
        "build index.html",
        "build index.html src/*.js",
        "build index.html src/*.js -o lib.js"
    ],
    "options": [
        {
            "shorthand": "-e",
            "flag": "--exclude",
            "description": "Modules excluded"
        },
        {
            "flag": "--encoding",
            "description": "Input file encoding, default to utf-8"
        },
        {
            "shorthand": "-l",
            "flag": "--library",
            "description": "External library paths"
        },
        {
            "shorthand": "-i",
            "flag": "--include",
            "description": "Modules included"
        },
        {
            "flag": "--ignore",
            "description": "Files excluded"
        },
        {
            "shorthand": "-n",
            "flag": "--namespace",
            "description": "Namespace of the generated library, default to _"
        },
        {
            "shorthand": "-o",
            "flag": "--output",
            "description": "Output path, default to util.js"
        },
        {
            "shorthand": "-f",
            "flag": "--format",
            "description": "Module pattern, commonjs, umd or global, defaults to umd"
        },
        {
            "flag": "--transpiler",
            "description": "Transpiler to transform code, not accessible through command line"
        },
        {
            "shorthand": "-w",
            "flag": "--watch",
            "description": "Watch files to regenerate automatically"
        }
    ]
}