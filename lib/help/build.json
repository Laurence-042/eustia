{
    "command": "build",
    "description": "Build JavaSript library by scanning files",
    "usage": [
        "build [<options>]",
        "build index.html",
        "build index.html src/",
        "build index.html src/ -o lib.js"
    ],
    "options": [
        {
            "shorthand": "-o",
            "flag": "--output",
            "description": "Output path"
        },
        {
            "shorthand": "-e",
            "flag": "--encoding",
            "description": "Input file encoding, default to utf-8"
        },
        {
            "shorthand": "-n",
            "flag": "--name",
            "description": "Namespace of the generated library"
        }
    ]
}